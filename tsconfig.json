{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es2015",
      "ES6"
    ],
    "rootDir": "src",
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "resolveJsonModule": true,
    "downlevelIteration": true
  },
  "exclude": [
    "src/**/*test.ts",
    "node_modules",
    "./node_modules",
    "./node_modules/*"
  ]
}